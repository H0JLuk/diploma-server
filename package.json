  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "typeorm:cli": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -f ./ormconfig-migrations.ts",
    "migration-generate": "npm run typeorm:cli -- migration:generate -n",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
    "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -c main -n ",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run -c main",
    "migration:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert -c main",
    "seed:generate": "ts-node typeorm migration:generate -c seed -n ",
    "seed:run": "ts-node typeorm migration:run -c seed",
    "seed:revert": "ts-node typeorm migration:revert -c seed"
  },
  "dependencies": {
    "@nestjs/apollo": "^10.0.16",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^2.1.0",
